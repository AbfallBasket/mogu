<!--pages/phone-login/phone-login.wxml-->
<view class="phone-login-container">
    <text class="phone-validate">手机号验证</text>
    <text class="subtitle">用于即使获取课程最新信息</text>
    <view class="content">
        <input class="phone" bindblur="getPhoneNumber" placeholder="请输入您的手机号" type="number" maxlength="11"
               minlength="11"/>
        <view class="get-vcode" bindtap="getCode" style="color:#a8a8a8">{{isTimeLag?timeLag+'s':'获取验证码'}}</view>

        <input class="vcode" minlength="4" maxlength="4" placeholder="请输入验证码" type="number"/>
    </view>
    <view bindtap="phoneLogin" class="phone-login">
        <image src="/assets/images/phone_login@2x.png" alt=""/>
    </view>
</view>
